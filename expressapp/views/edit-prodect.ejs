<!DOCTYPE html>
<html>
  <head>
    <title>Add Product</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1>Add New Product</h1>
    <form action="/update-product/<%= product._id %>" method="POST">
      <div>
        <label for="name">Product Name:</label>
        <input type="text" value="<%= product.name %>" id="name" name="name" required />
      </div>
      <div>
        <label for="price">Price:</label>
        <input type="number" value="<%= product.price %> id="price" name="price" step="0.01" required />
      </div>
      <div>
        <label for="description">Description:</label>
        <textarea id="description" value="<%= product.description %> name="description" required></textarea>
      </div>
      <input type="submit" value="Update">
    </form>
    <a href="/">Back to Home</a>
  </body>
</html>
